{
  "name": "telegram_test_bot",
  "version": "0.1.0",
  "license": "MIT",
  "author":
    "Cody Brunner <rockchalkwushock@icloud.com> (https://codybrunner.rocks)",
  "description": "Testing out the Telegram Bot API",
  "repository": "https://github.com/rockchalkwushock/telegram_test_bot.git",
  "main": "index.js",
  "scripts": {
    "cm": "nps commit",
    "start": "micro-bot -d ${NOW_URL}",
    "test": "nps test"
  },
  "dependencies": {
    "micro-bot": "^2.2.2"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.17.0",
    "eslint-config-equimper": "^2.2.2",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.15.0-rc.8",
    "jest": "^22.2.2",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.14.12",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "prettier": "^1.10.2",
    "snyk": "^1.69.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom": ["./bot"],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "now": {
    "alias": ["telegram_test_bot_v1", "telegram_test_bot_v1_beta"],
    "dotenv": true,
    "env": {
      "NODE_ENV": "production"
    },
    "files": [".env, package.json, yarn.lock"],
    "name": "telegram_test_bot"
  }
}
